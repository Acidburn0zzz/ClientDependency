<?xml version="1.0" encoding="utf-8"?>
<package>
  <metadata>
    <id>ClientDependency-Mvc</id>
    <title>Client Dependency Framework for MVC</title>
    <version>0.0.0.0</version>
    <authors>Shannon Deminick</authors>
    <description>An extension for the ClientDependency framework to support ASP.NET MVC.</description>
    <summary>ClientDependency for MVC</summary>
    <language>en-US</language>
    <licenseUrl>http://www.opensource.org/licenses/ms-pl</licenseUrl>
    <projectUrl>https://github.com/Shandem/ClientDependency</projectUrl>
    <tags>mvc css html javascript clientdependency cdf minification compression</tags>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <dependencies>
      
      <group targetFramework="net40">
        <!--between 4 and less than version 5-->
        <dependency id="Microsoft.AspNet.Mvc" version="(4.0.20710,5)" />
      </group>

      <group targetFramework="net45">
        <!--between 4 and less than version 6 (who knows what'll happen then)-->
        <dependency id="Microsoft.AspNet.Mvc" version="(4.0.0,6)" />
      </group>

      <group>
        <dependency id="ClientDependency" version="1.7.1.2" />
      </group>

    </dependencies>
  </metadata>
  <files>

    <file src="net40\*.dll" target="lib\net40" />
    <file src="net40\*.pdb" target="lib\net40" />

    <file src="net45\*.dll" target="lib\net45" />
    <file src="net45\*.pdb" target="lib\net45" />

    <file src="nuget-transforms\web.config.transform" target="Content" />

  </files>
</package>